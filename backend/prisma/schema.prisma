datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}


model Item {
  id         Int       @id @default(autoincrement())
  name       String
  url        String
  createdAt  DateTime  @default(now())
  prices     Price[]
  watchers   Watch[]
}

model Price {
  id        Int      @id @default(autoincrement())
  value     Float
  createdAt DateTime @default(now())
  itemId    Int
  Item      Item     @relation(fields: [itemId], references: [id])
}

model Watch {
  id          Int      @id @default(autoincrement())
  threshold   Float
  chatId      String
  itemId      Int
  Item        Item     @relation(fields: [itemId], references: [id])
}
